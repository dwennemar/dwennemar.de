const today = new Date();
---

<footer>
	<div class="socials">
		<span class="social-element"><a href="https://github.com/dwennemar">GitHub</a></span>
		<span class="social-element"><a href="https://gitlab.com/dwennemar">GitLab</a></span>
		<span class="social-element"><a href="https://linkedin.com/in/dwennemar">LinkedIn</a></span>
		<span class="social-element"><a href="https://xing.com/profile/Daniel_Wennemar">Xing</a></span>
		<span class="social-element"><a href="https://dev.to/dawed">DEV</a></span>
