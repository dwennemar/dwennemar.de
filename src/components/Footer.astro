<style>
	footer {
		padding: 25px;
		text-align: center;
	}

	.socials {
		display: flex;
		flex-wrap: wrap;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: center;	
	}
	.social-element {
		margin: .5rem;
		text-align: center;
	}

	.social-element > a {
		text-decoration: none;
		padding: .75ex 1ex;
		text-align: center;
	}

	.social-element > a:hover {
		background-color: dodgerblue;
		border-radius: 1rem;
		color: #fff;
	}
